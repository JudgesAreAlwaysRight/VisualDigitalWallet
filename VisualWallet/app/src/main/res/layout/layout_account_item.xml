<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/button_account"
    android:elevation="5dp"
    android:gravity="start|center_vertical|end"
    android:longClickable="true">

    <TextView
        android:id="@+id/accName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="账户名"
        android:textColor="@color/bkg_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/accType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/accDel"
        android:text="类型"
        android:textColor="@color/bkg_gray"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/accDel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/blue_sub" />
</RelativeLayout>