<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ant_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加新账户"
        android:textColor="#03A9F4"
        android:textSize="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/ant_pk"
        android:layout_below="@id/ant_title"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ant_pk_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="私钥:"
            android:textSize="30dp"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:id="@+id/ant_pk_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ant_pk_tag"
            android:layout_alignBottom="@id/ant_pk_tag"
            android:lines="1"
            android:hint="在这输入你的私钥"
            android:textSize="20dp">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ant_address"
        android:layout_below="@id/ant_pk"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ant_address_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址:"
            android:textSize="30dp"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:id="@+id/ant_address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ant_address_tag"
            android:layout_alignBottom="@id/ant_address_tag"
            android:lines="1"
            android:hint="在这输入你的地址"
            android:textSize="20dp">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ant_type"
        android:layout_below="@id/ant_address"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ant_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型:"
            android:textSize="30dp"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:id="@+id/ant_type_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ant_type_tag"
            android:layout_alignBottom="@id/ant_type_tag"
            android:lines="1"
            android:hint="在这输入你的币种类型"
            android:textSize="20dp">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ant_info"
        android:layout_below="@id/ant_type"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ant_info_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textSize="30dp"
            android:layout_margin="10dp">
        </TextView>
        <EditText
            android:id="@+id/ant_info_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ant_info_tag"
            android:layout_alignBottom="@id/ant_info_tag"
            android:lines="1"
            android:hint="在这输入你的备注信息"
            android:textSize="20dp">
        </EditText>
    </RelativeLayout>

    <TextView
        android:id="@+id/Warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ant_info"
        android:text="注意：门限数应当小于等于分存数"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#de1242">

    </TextView>
    <RelativeLayout
        android:id="@+id/ant_kn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Warning"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/ant_k_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门限数:"
            android:layout_margin="10dp"
            android:textSize="25dp">
        </TextView>
        <Spinner
            android:id="@+id/ant_k_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:theme="@style/Spinner"
            android:entries="@array/valueK"
            android:layout_alignBottom="@id/ant_k_tag"
            android:layout_toRightOf="@id/ant_k_tag">
        </Spinner>
        <TextView
            android:id="@+id/ant_n_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分存数:"
            android:layout_toRightOf="@id/ant_k_spinner"
            android:layout_margin="10dp"
            android:textSize="25dp">
        </TextView>
        <Spinner
            android:id="@+id/ant_n_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:theme="@style/Spinner"
            android:entries="@array/valueN"
            android:textSize="25dp"
            android:layout_alignBottom="@id/ant_n_tag"
            android:layout_toRightOf="@id/ant_n_tag">
        </Spinner>
    </RelativeLayout>


    <Button
        android:id="@+id/ant_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:textSize="25dp"
        android:text="提交"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/buttom_press">

    </Button>




</RelativeLayout>